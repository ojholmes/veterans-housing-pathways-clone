# Database (SQLite file for local dev)
DATABASE_URL="file:./dev.db"

# App
PORT=4000
APP_BASE_URL=http://localhost:4000

# SMTP (for nodemailer) - fill with your provider
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=supersecret
EMAIL_FROM="Veterans Housing Pathways <no-reply@example.com>"

# OpenAI
OPENAI_API_KEY=

# Scheduler
CHECK_OVERDUE_DAILY_AT=02:00

# Optional provider vars (SendGrid / Mailgun)
# SendGrid (SMTP): supply `SENDGRID_API_KEY` to auto-configure SMTP via smtp.sendgrid.net
SENDGRID_API_KEY=
SENDGRID_SMTP_HOST=smtp.sendgrid.net
SENDGRID_SMTP_PORT=587
SENDGRID_SMTP_USER=apikey

# Mailgun (SMTP): set these to your Mailgun SMTP credentials
MAILGUN_SMTP_LOGIN=
MAILGUN_SMTP_PASSWORD=
MAILGUN_SMTP_HOST=smtp.mailgun.org
MAILGUN_SMTP_PORT=587
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
